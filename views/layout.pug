doctype html
html
  head
    title TriviaPlus
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') miTrivia
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Inicio
            if user
              li
                a(href='/users/cuestionario') Jugar
            if user && user.role=='admin'
              li
                a(href='/users/add') Agregar Preguntas
          ul.nav.navbar-nav.navbar-right
            if user
              li 
                a(href='/users/logout') Salir
            else
              li
                a(href='/users/register') Registro
              li
                a(href='/users/login') Ingresar
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2019 - ET 35
    script(src='/bower_components/jquery/dist/jquery.js')  
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
